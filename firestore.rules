rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isStaging() {
      return request.auth == null && request.resource != null && (
        request.origin != null && (
          request.origin.matches('.*-staging.vercel.app') ||
          request.origin.matches('.*-test.vercel.app') ||
          request.origin.matches('.*-dev.vercel.app') ||
          request.origin.matches('.*-projects.vercel.app')
        )
      );
    }

    function isDevelopment() {
      return request.auth == null && (
        // Allow requests with no origin (like direct Firebase SDK calls)
        request.origin == null ||
        // Allow localhost origins
        (request.origin != null && (
          request.origin.matches('localhost:.*') ||
          request.origin.matches('127.0.0.1:.*')
        ))
      );
    }

    function isPreviewDeployment() {
      return request.auth == null && request.origin != null && (
        request.origin.matches('.*-projects.vercel.app') ||
        request.origin.matches('.*-staging.vercel.app') ||
        request.origin.matches('.*-preview.vercel.app')
      );
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Base rules for development and staging
    match /{document=**} {
      allow read: if true;  // Anyone can read
      allow create, update: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
    }

    // Songs collection - public songs available to everyone
    match /songs/{songId} {
      allow read: if true;
      allow create, update: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
    }

    // User songs collection - personal song lists
    match /user_songs/{userId} {
      allow read: if isOwner(userId) || isDevelopment() || isStaging() || isPreviewDeployment();
      allow create, update, delete: if isOwner(userId) || isDevelopment() || isStaging() || isPreviewDeployment();
      
      match /songs/{songId} {
        allow read: if isOwner(userId) || isDevelopment() || isStaging() || isPreviewDeployment();
        allow create, update, delete: if isOwner(userId) || isDevelopment() || isStaging() || isPreviewDeployment();
      }
    }

    match /config/{configId} {
      allow read: if true;
      allow create, update: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow create, update: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isPreviewDeployment() || isAuthenticated();
    }
  }
} 