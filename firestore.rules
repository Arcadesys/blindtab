rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isStaging() {
      return request.auth == null && request.resource != null && (
        request.origin.matches('.*-staging.vercel.app') ||
        request.origin.matches('.*-test.vercel.app') ||
        request.origin.matches('.*-dev.vercel.app')
      );
    }

    function isDevelopment() {
      return request.auth == null && (
        request.origin.matches('localhost:.*') ||
        request.origin.matches('127.0.0.1:.*') ||
        // Allow emulator operations without origin check
        request.origin == null
      );
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Base rules for development and staging
    match /{document=**} {
      allow read: if true;  // Anyone can read
      allow create, update: if isDevelopment() || isStaging() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isAuthenticated();
    }

    // Songs collection - public songs available to everyone
    match /songs/{songId} {
      allow read: if true;  // Anyone can read songs
      allow create, update: if isDevelopment() || isStaging() || isAuthenticated();  // Allow writes if authenticated
      allow delete: if isDevelopment() || isStaging() || isAuthenticated();
    }

    // User songs collection - personal song lists
    match /user_songs/{userId} {
      allow read: if isOwner(userId) || isDevelopment() || isStaging();
      allow create, update, delete: if isOwner(userId) || isDevelopment() || isStaging();
      
      match /songs/{songId} {
        allow read: if isOwner(userId) || isDevelopment() || isStaging();
        allow create, update, delete: if isOwner(userId) || isDevelopment() || isStaging();
      }
    }

    match /config/{configId} {
      allow read: if true;
      allow create, update: if isDevelopment() || isStaging() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isAuthenticated();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow create, update: if isDevelopment() || isStaging() || isAuthenticated();
      allow delete: if isDevelopment() || isStaging() || isAuthenticated();
    }
  }
} 